#if 0
srce=${1%.c}
test -z "$srce" && exit 1
prog=${srce%/*}/../build/${srce##*/}.exe
base=${srce%/*}/in/${srce##*/}

does() { echo "$0: $@" >/dev/tty; "$@"; }

cflags='-g -O0'
doexec=
case $2 in
  cover)  cflags="$cflags --coverage";&
  check)  bla() { diff -u $1 -; };;
  update) bla() { cat >$1; };;
  *)      cflags="$cflags -DLOC_NOTIF"; shift; doexec=1;;
esac

does ${CC:-cc} $cflags $srce.c -o $prog || exit $?
test -n "$doexec" && does exec $prog "$@"

set -o pipefail
fail=0
for tape in $base/*.tape #*/
  do
    does $prog ${tape%.tape} 2>&1| bla $tape
    one=$?
    fail=$((fail+one))
    test 0 -ne $one && echo exit with code $one
done
exit $fail
#endif

#define TRY_EXITF
//#define LOC_NOTIF
#include "../cintre/prints.h"

void run_test(char* file);
int main(int argc, char** argv) { run_test(1 < argc ? argv[1] : ""); }
